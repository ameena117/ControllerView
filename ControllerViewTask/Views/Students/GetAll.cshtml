
@{
    ViewData["Title"] = "GetAll";
    Layout = "MainLayout";
}

<h1>GetAll</h1>

<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th></th>
        </tr>

    </thead>

    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>
                    <a asp-action="Update" asp-controller="Students" asp-route-id="@student.Id">Update</a>
                    <a asp-action="Delete" asp-controller="Students" asp-route-id="@student.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

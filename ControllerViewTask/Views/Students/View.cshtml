@using ControllerView.Models

@{
    ViewData["Title"] = "View";
    Layout = "MainLayout";
}

@model Student 

<h2 class="toast-header">View @Model.Id</h2>
<div class="card">
    <div class="card-header">
        This is @Model.FirstName - @Model.LastName.
    </div>
    <div class="card-body">
        <a class="btn btn-outline-primary" asp-action="Update" asp-controller="Students" asp-route-id="@Model.Id"><i class="bi bi-pencil-square"></i></a>
        <a class="btn btn-outline-danger" asp-action="Delete" asp-controller="Students" asp-route-id="@Model.Id"><i class="bi bi-trash"></i></a>
    </div>
</div>

